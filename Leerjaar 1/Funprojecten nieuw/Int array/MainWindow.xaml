<Window x:Class="Int_array.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Int_array"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border x:Name="myBorder" BorderBrush="Black" BorderThickness="10" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Margin="0,0,0,0" Width="100" MouseEnter="myBorder_MouseEnter" MouseLeave="myBorder_MouseLeave"/>
    </Grid>
</Window>
