<Window x:Class="Project_voor_video.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_voor_video"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btJoris" Height="130" Width="300" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Change color" FontSize="40" FontWeight="Bold" FontStyle="Italic" Background="Gray" Click="Button_Click"></Button>
        <TextBox x:Name="tbGetal1" Height="100" Width="200" FontSize="50" FontWeight="Bold" TextAlignment="Center"></TextBox>
        <Button x:Name="tbUitkomst" Background="LightGreen" Width="200" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="30" FontWeight="Bold"></Button>
    </Grid>
</Window>
