<Window x:Class="Booleans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booleans"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Background="Blue" Width="150" Height="50" Margin="0,0,0,50" TextAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="White" x:Name="Booltest"></TextBox>
        <TextBox Background="Blue" Width="150" Height="50" Margin="0,0,0,200" TextAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="White" x:Name="Naam"></TextBox>
        <Button Click="Button_Click" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0" Content="Test bool" FontSize="16" FontWeight="Bold"></Button>
    </Grid>
</Window>
