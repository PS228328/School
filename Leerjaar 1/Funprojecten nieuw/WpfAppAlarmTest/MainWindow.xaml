<Window x:Class="WpfAppAlarmTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAlarmTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/luchtalarm.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel x:Name="Eerstvolgende" Opacity="0.76" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="30" FontWeight="Bold" Background="Wheat" Width="350" TextAlignment="Center">Eerstvolgende test:</TextBlock>
            <TextBlock FontSize="20" Background="White" Width="650" TextAlignment="Center" x:Name="tbNextTest"></TextBlock>
            <TextBlock FontSize="20" Background="White" Width="650" TextAlignment="Center" x:Name="tbDayCount"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
