<Window x:Class="WPFappSimpleClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFappSimpleClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="MyPictures/stopwatches.jpg" Opacity="0.6"></ImageBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,200" FontSize="40" Background="LightGray">What would you like to use?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="350" x:Name="btStopwatch" FontSize="50" FontWeight="Bold" FontStyle="Normal" FontFamily="Arial" Background="Green" Foreground="White" Click="btStopwatch_Click">Stopwatch</Button>
            <TextBlock Width="40"></TextBlock>
            <Button Width="350" x:Name="btCountdown" FontSize="50" FontWeight="Bold" FontStyle="Normal" FontFamily="Arial" Background="Red" Foreground="White" Click="btCountdown_Click">Countdown</Button>
        </StackPanel>
    </Grid>
</Window>
