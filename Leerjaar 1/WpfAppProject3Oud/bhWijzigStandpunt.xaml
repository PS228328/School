<Window x:Class="WpfAppProject3.bhWijzigStandpunt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProject3"
        mc:Ignorable="d"
        Title="bhWijzigStandpunt" Height="600" Width="1050">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Stemmen.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock x:Name="tbxHeader" Width="500" FontSize="30" Background="#FF511DBC" Foreground="White" Height="40" TextAlignment="Center" FontWeight="Bold" >Wijzig standpunt</TextBlock>
            <TextBox x:Name="tbxID" Visibility="Hidden"></TextBox>
            <TextBox x:Name="tbxStandpunt" Height="200" TextWrapping="Wrap" FontSize="14" TextAlignment="Center" Padding="5" Width="450"></TextBox>
            <ComboBox x:Name="cbxThema" Margin="0,20,0,0" Width="250" FontSize="18">
                
            </ComboBox>
            <Button x:Name="btUpdate" Width="140" Height="40" Margin="0,20,0,0" Content="Wijzig" FontSize="24" FontWeight="Bold" Click="btUpdate_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
