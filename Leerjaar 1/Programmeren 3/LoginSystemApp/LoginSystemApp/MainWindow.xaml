<Window x:Class="LoginSystemApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginSystemApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGray">
    <StackPanel>
        <TextBlock FontSize="30" FontWeight="Bold">Login System</TextBlock>
        <WrapPanel>
            <TextBlock Width="60">Username: </TextBlock>
            <TextBox x:Name="tbUsername" Width="200" HorizontalAlignment="Left" Margin="5"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Width="60">Password:</TextBlock>
            <TextBox x:Name="tbPassword" Width="200" HorizontalAlignment="Left" Margin="5"></TextBox>
        </WrapPanel>
        <Button x:Name="btLogin" Width="200" HorizontalAlignment="Left" Margin="60, 5" Background="LightBlue">Login</Button>
        <Button x:Name="btCreate" Width="200" HorizontalAlignment="Left" Margin="60, 5" Background="LightGreen">Create new account</Button>
    </StackPanel>
</Window>
