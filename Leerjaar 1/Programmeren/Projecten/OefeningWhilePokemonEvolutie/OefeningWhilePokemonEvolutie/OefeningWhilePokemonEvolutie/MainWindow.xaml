<Window x:Class="OefeningWhilePokemonEvolutie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OefeningWhilePokemonEvolutie"
        mc:Ignorable="d"
        Title="Pokemon Evolution" Height="225" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/pokemonBackground.png"/>
        </Grid.Background>
        <StackPanel>
            <TextBox Name="tbLevel" Background="White" Width="50px" Margin="0,5,0,0">1</TextBox>
            <Button Name="btnLevelUp" Width="50px" Margin="0,15,0,0" Background="LightYellow" Click="btnLevelUp_Click">Level up!</Button>
            <Button Name="btnLevelToMax" Width="100px" Margin="0,5,0,0" Background="LightYellow" Click="btnLevelToMax_Click">Level up to 99!</Button>
        </StackPanel>
    </Grid>
</Window>
