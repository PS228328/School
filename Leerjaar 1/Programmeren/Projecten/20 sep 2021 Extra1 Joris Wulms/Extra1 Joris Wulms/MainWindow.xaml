<Window x:Class="Extra1_Joris_Wulms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Extra1_Joris_Wulms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Email address:" Width="200" Height="50" Margin="0,100,500,0" FontSize="20" FontWeight="Bold"></Button>
            <Button Content="Password" Width="200" Height="50" Margin="0,20,500,0" FontSize="20" FontWeight="Bold"></Button>
        </StackPanel>
        <StackPanel>
            <TextBox x:Name ="T1" Width="300" Height="50" Margin="100,100,0,0" TextChanged="T1_TextChanged"></TextBox>
            <TextBox x:Name ="T2" Width="300" Height="50" Margin="100,20,0,0"></TextBox>
            <Button Width="300" Height="50" Margin="100,20,0,0" Background="Green" FontSize="30" FontWeight="Black" Click="Button_Click" Content="Register"></Button>
        </StackPanel>
    </Grid>
</Window>
