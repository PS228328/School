<Window x:Class="WpfAppSimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSimpleCalculator"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid Background="Black">
        <StackPanel VerticalAlignment="Center" Width="300">
            <TextBox x:Name="tbGetal1" Foreground="White" Margin="0,10,0,0" Background="DarkGray"/>
            <TextBox x:Name="tbGetal2" Foreground="White" Margin="0,10,0,0" Background="DarkGray"/>
            <TextBox x:Name="tbUitkomst" Foreground="White" Margin="0,10,0,0" Background="DarkGray"/>
            <Button Background="Green" Foreground="White" Margin="0,10,0,0" Click="Button_Click">Go</Button>
        </StackPanel>
    </Grid>
</Window>
