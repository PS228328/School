<Window x:Class="_27_sep_2021_While_statement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27_sep_2021_While_statement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Lightgreen">
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" GotFocus="StackPanel_GotFocus">
            <TextBox x:Name="tbInput" Background="DarkBlue" Foreground="White" Text="0" TextAlignment="Center"></TextBox>
            <TextBlock x:Name="tbText" Margin="0,25,0,0" Background="Yellow" Text="0" TextAlignment="Center"></TextBlock>
            <Button Background="DarkGray" Content="Go" Margin="0,25,0,0" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
